<!DOCTYPE html>
<head>
<title>Felicias Todo App</title>
<link rel="stylesheet" href="/static/stylesheets/main.css" type="text/css">
<script src="https://kit.fontawesome.com/8a91947445.js" crossorigin="anonymous"></script>
</head>
<body>
<div class="todo-wrapper">
<h3>ATT GÖRA:</h3>

    <form action="/" method="POST" class="todo-input">
        <input type="text" name="content">
        <button type="submit"><span class="fas fa-plus"></span></button>
        </form>

<% todoTasks.forEach(details => { %>
<% if (details._id == idTask) { %>
<li class="todo-list-item">
<form action="/edit/<%= details._id %>" method="POST">
<input type="text" value="<%= details.content %>" name="content">
<button type="submit" class="finish-button">Klar</button>
<a href="/" class="cancel-button">Stäng</a>
</form>
</li>
<% } else { %>
<li class="todo-list-item">
<div class="todo-list-item-name"><%= details.content %></div>
<a href="/edit/<%= details._id %>" class="edit-button"> <span class="fas fa-pencil-alt"></span>
</a>
<a href="/remove/<%= details._id %>" class="remove-button"> <span class="fas fa-trash-alt"></span>
</a>
</li>
<% } %>
<% }) %>
</div>
</div>
</body>